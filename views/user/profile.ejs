<head>
    <style>
        body {
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }
    
        .main-body {
            padding: 15px;
        }
    
        .card {
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
        }
    
        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0, 0, 0, .125);
            border-radius: .25rem;
        }
    
        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }
    
        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }
    
        .gutters-sm>.col,
        .gutters-sm>[class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }
    
        .mb-3,
        .my-3 {
            margin-bottom: 1rem !important;
        }
    
        .bg-gray-300 {
            background-color: #e2e8f0;
        }
    
        .h-100 {
            height: 100% !important;
        }
    
        .shadow-none {
            box-shadow: none !important;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
</head>
<%- include('../partials/user-header')%>
<div class="container-fluid">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <%if(userData.image){%>
                            <img src="upload/profile/<%=userData.image%>" alt="profile-img"
                                class="rounded-circle" width="150">
                            <%}else{%>
                                <img src="data:image/png;base64," alt="profile-img"
                                class="rounded-circle" width="150">
                            <%}%>
                            <div class="m-3">
                                <h4>
                                    <%=userData.name%>
                                </h4>
                                <a href="/orders/<%=userData._id%>" class="btn btn-primary mt-3">Orders</a>
                                <a href="/wallet" class="btn btn-outline-primary mt-3"><i class="fa-solid fa-wallet me-2"></i>Wallet</a>
                            </div>
                               
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= userData.name%>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%=userData.email%>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%=userData.number%>
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " 
                                    href="/edit-profile?id=<%=userData._id%>">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row gutters-sm ">
                    <div class="col-sm-12 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i
                                        class="material-icons text-info mr-2">Manage Address</i>
                                        <%if(userData.adress.length<2){%>
                                        <a href="/add-adress/<%=userData._id%>"
                                        class="text-info ms-auto">Add Address</a>
                                        <%}%>
                                    </h6>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"
                                    aria-valuenow="10   0" aria-valuemin="0" aria-valuemax="100"></div>
                                
                                </div>
                                <%for(i=0;i<userData.adress.length;i++){%>
                                <div class="mt-3 mb-3 bg-secondary p-2 rounded text-dark">
                                    <div class="d-flex">
                                        <small class="me-4">FullName: <%=userData.adress[i].name%></small>
                                        <a class="ms-auto" href="/show-edit-adress/<%=userData.adress[i]._id%>">
                                            <i class=" fa fa-pencil text-light " style="margin-left: 13rem;"></i>
                                        </a>
                                        <i class="fa fa-close ms-2 text-white" aria-hidden="true" onclick="removeAdress('<%=userData._id%>' , '<%=userData.adress[i]._id%>')"></i>
                                    </div>
                                    <div class="d-flex">
                                        <small class="me-1">Number: <%=userData.adress[i].number%></small>,
                                        <small>Alt Number: <%=userData.adress[i].altNumber%></small>
                                    </div>
                                    <div class="d-flex">
                                        <small>Pincode: <%=userData.adress[i].pinCode%></small>
                                    </div>
                                    <div class="d-flex">
                                        <small>House: <%=userData.adress[i].house%></small>
                                    </div>
                                    <div class="d-flex">
                                        <small class="me-5">Area: <%=userData.adress[i].area%></small>
                                        <small>Landmark: <%=userData.adress[i].landmark%></small>
                                    </div>
                                    <div class="d-flex">
                                        <small class="me-4">Town: <%=userData.adress[i].town%></small>
                                        <small class="me-4">State: <%=userData.adress[i].state%></small>
                                        <small class="me-4">country: <%=userData.adress[i].country%></small>
                                    </div>

                                </div>
                                <%}%>

                                


                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="d-flex" style="align-items: center;">
                                    <i class="fa-solid fa-key me-2"></i>
                                     <h6 class="mb-0 btn btn-outline"><a href="/change-password/<%=userData._id%>">Change Password</a></h6>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="d-flex" style="align-items: center;">
                                    <i class="fa-solid fa-right-from-bracket me-2"></i>
                                    <h6 class="mb-0 btn btn-outline"><a href="/logout">Logout</a></h6>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <div class="d-flex" style="align-items: center;">
                                    <i class="fa-solid fa-trash me-2"></i>
                                <h6 class="mb-0 btn btn-outline"><a href="#">Delete Account</a></h6>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>



            </div>
        </div>

    </div>
</div>

<script>
    function removeAdress(userId,adressId){
        $.ajax({
            url:'/remove-adress',
            method:'post',
            data:{
                userId:userId,
                adressId:adressId,
            },
            success:(response)=>{
                if(response == true){
                    alert("Adress removed");
                    location.reload();;
                }else{
                    alert("Error ocured");
                    location.reload();
                }
                
            }
        })
    }

</script>