    <script>
        function ListAndUnlistProduct(proId){
            const data = document.getElementById(proId+'button').innerText
            if(data == 'Unlist'){
                alert("Enter into unlist")  
                $.ajax({
                url:'/admin/unlist-product',
                method:'post',
                data:{
                    proId
                },
                success:(response)=>{
                    if(response.updated == true){
                        document.getElementById(proId+'button').innerText = 'List';
                        document.getElementById(proId+'button').className = 'px-3 btn btn-sm font-sm btn-light rounded';
                        Swal.fire({
                            icon: 'success',
                            title: 'Unlisted',
                            text: 'The product has been unlisted.',
                            timer: 5000
					    })
                    }else if(response.updated == false){
                        Swal.fire({
                            title: 'Error',
                            text: 'Error while unlisting the cart.',
                            icon: 'error',
                            timer: 5000
					    })
                    }else{
                        location.reload()
                    }
                }
            })
            }else if(data == 'List'){
                $.ajax({
                url:'/admin/list-product',
                method:'post',
                data:{
                    proId
                },
                success:(response)=>{
                    if(response.updated == true){
                        document.getElementById(proId+'button').innerHTML = 'Unlist';
                        document.getElementById(proId+'button').className = 'btn btn-sm font-sm btn-light rounded';
                        Swal.fire({
                            icon: 'success',
                            title: 'Listed',
                            text: 'The product has been listed.',
                            timer: 5000
					    })
                    }else if(response.updated == false){
                        Swal.fire({
                            title: 'Error',
                            text: 'Error while listing the cart.',
                            icon: 'error',
                            timer: 5000
					    })
                    }else{
                        location.reload()
                    }
                }
            })
            }else{
                alert("Else")
            }
        }
    </script>

