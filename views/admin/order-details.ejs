                                    <option value="cancled">Cancled</option>
                                    <%}else if(orderDetails.orderStatus == 'pending'){%>
                                        <option value="pending">Pending</option>
                                        <option value="cancled">Cancled</option>
                                        <option value="confirmed">Confirmed</option>
                                        <option value="delivered">Delivered</option>
                                    <%}else if(orderDetails.orderStatus == 'confirmed'){%>
                                        <option value="confirmed">Confirmed</option>
                                        <option value="pending">Pending</option>
                                        <option value="cancled">Cancled</option>
                                        <option value="delivered">Delivered</option>
                                    <%}else if(orderDetails.orderStatus == 'delivered'){%>
                                        <option value="delivered">Delivered</option>
                                        <option value="confirmed">Confirmed</option>
                                        <option value="pending">Pending</option>
                                        <option value="cancled">Cancled</option>
                                    <%}else if(orderDetails.orderStatus == 'return'){%>
                                        <option value="delivered">Returned</option>
                                    <%}%>
                                </select>
                                <a class="btn btn-primary" onclick="changeStatus('<%=orderDetails._id%>')">Save</a>
                                <a title="Download invoce" class="btn btn-primary print ms-2" href="/admin/invoice?id=<%=orderDetails._id%>"><i class="icon material-icons md-print"></i></a>
