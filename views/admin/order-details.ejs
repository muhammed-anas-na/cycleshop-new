<script>
    function productDetails(imgUrl,name,rPrice,sPrice,category,description){
        Swal.fire({
            imageUrl: imgUrl,
            imageAlt: 'A tall image',
            html:
            '<b>'+name+'</b>, ' +'<br>'+
            '<p><s style="color:red">₹'+rPrice+'</s></p>'+
            '₹<strong>'+sPrice+'</strong>'+'<br>'+
            '<p>Category : '+category+'</p>'+'<br>'+
            '<p>Description : '+description+'</p>',
        })
    }
    function changeStatus(orderId){
        let status = document.getElementById('orderStatus').value
        $.ajax({
            url:'/admin/change-order-status',
            method:'post',
            data:{
                orderId,
                status,
            },
            success:(response)=>{
                alert("Status updated")
            }
        })
    }
</script>
