    <main class="main-wrap">
        
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List </h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <div>
                    <input type="text" placeholder="Search order ID" class="form-control bg-white">
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(i=0;i<orders.length;i++){%>
                                <tr>
                                    <td><%=orders[i]._id%></td>
                                    <td><b><%=orders[i].adress.name%></b></td>
                                    <td><%=orders[i].adress.number%></td>
                                    <td>&#8377;<%=orders[i].GrandTotal%></td>
                                    <%if(orders[i].orderStatus == 'pending'){%>
                                        <td><span id="badge" class="badge rounded-pill alert-warning">Pending...</span></td>
                                    <%}else if(orders[i].orderStatus == 'delivered'){%>
                                        <td><span id="badge" class="badge rounded-pill alert-success">Delivred</span></td>
                                    <%}else if(orders[i].orderStatus == 'cancled'){%>
                                        <td><span id="badge" class="badge rounded-pill alert-danger">Cancled</span></td>
                                    <%}else if(orders[i].orderStatus == 'shipped'){%>
                                        <td><span id="badge" class="badge rounded-pill alert-primary">Shipped</span></td>
                                    <%}else if(orders[i].orderStatus == 'confirmed'){%>
                                        <td><span id="badge" class="badge rounded-pill alert-info">Confirmed</span></td>
                                    <%}else if(orders[i].orderStatus == 'return'){%>
                                        <td><span id="badge" class="badge rounded-pill alert-info">Returned</span></td>
                                    <%}%>

                                    <td><%=orders[i].createdOn%></td>
                                    <td class="text-end">
                                        <a href="/admin/order-details/<%=orders[i]._id%>" class="btn btn-md rounded font-sm">Detail</a>
                                    </td>
                                </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            <% if (totalpages > 1) { %>
